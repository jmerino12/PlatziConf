<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout

          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <androidx.cardview.widget.CardView
              android:layout_margin="15dp"
              app:cardElevation="10dp"
              app:cardCornerRadius="@dimen/cardCornesRadius"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:background="@drawable/shape_parrafo"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/altoImageViewHome"
                      android:src="@drawable/banner_platzi_conf"/>
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/colorPrimaryDark"/>
                  <TextView
                      android:text="@string/inicio_frag_tv_que_es"
                      android:layout_width="match_parent"
                      android:textStyle="bold"
                      android:textSize="@dimen/nameTitulo"
                      android:textColor="@color/colorPrimaryDark"
                      android:layout_marginLeft="@dimen/marginHomeSubtitulo"
                      android:layout_marginRight="@dimen/marginHomeSubtitulo"
                      android:layout_marginTop="@dimen/marginHomeSubtitulo"
                      android:layout_height="wrap_content"/>
                  <View
                      android:layout_marginTop="@dimen/marginHomeSubtitulo"
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/colorPrimaryDark"/>
                  <TextView
                      android:text="@string/inicio_frag_tv_que_es_resp"
                      android:layout_width="match_parent"
                      android:textSize="@dimen/subti"
                      android:textColor="@color/colorPrimaryDark"
                      android:layout_marginLeft="@dimen/marginHomeSubtitulo"
                      android:layout_marginRight="@dimen/marginHomeSubtitulo"
                      android:layout_marginTop="@dimen/marginHomeSubtitulo"
                      android:layout_height="wrap_content"/>

              </LinearLayout>

          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_margin="15dp"
              app:cardElevation="10dp"
              app:cardCornerRadius="@dimen/cardCornesRadius"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:orientation="vertical"
                  android:background="@drawable/shape_parrafo"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/altoImageViewHome"
                      android:src="@drawable/platzi_conf_2"/>
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/colorPrimaryDark"/>
                  <TextView
                      android:text="@string/inicio_frag_tv_por_que"
                      android:layout_width="match_parent"
                      android:textStyle="bold"
                      android:textSize="@dimen/nameTitulo"
                      android:textColor="@color/colorPrimaryDark"
                      android:layout_marginLeft="@dimen/marginHomeSubtitulo"
                      android:layout_marginRight="@dimen/marginHomeSubtitulo"
                      android:layout_marginTop="@dimen/marginHomeSubtitulo"
                      android:layout_height="wrap_content"/>
                  <View
                      android:layout_marginTop="@dimen/marginHomeSubtitulo"
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/colorPrimaryDark"/>
                  <TextView
                      android:text="@string/inicio_frag_tv_info_resp"
                      android:layout_width="match_parent"
                      android:textSize="@dimen/subti"
                      android:textColor="@color/colorPrimaryDark"
                      android:layout_marginLeft="@dimen/marginHomeSubtitulo"
                      android:layout_marginRight="@dimen/marginHomeSubtitulo"
                      android:layout_marginTop="@dimen/marginHomeSubtitulo"
                      android:layout_height="wrap_content"/>

              </LinearLayout>

          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_margin="15dp"
              app:cardElevation="10dp"
              app:cardCornerRadius="@dimen/cardCornesRadius"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:orientation="vertical"
                  android:background="@drawable/shape_parrafo"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/altoImageViewHome"
                      android:src="@drawable/platzi_conf_3"/>
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/colorPrimaryDark"/>
                  <TextView
                      android:text="@string/inicio_frag_tv_info"
                      android:layout_width="match_parent"
                      android:textStyle="bold"
                      android:textSize="@dimen/nameTitulo"
                      android:textColor="@color/colorPrimaryDark"
                      android:layout_marginLeft="@dimen/marginHomeSubtitulo"
                      android:layout_marginRight="@dimen/marginHomeSubtitulo"
                      android:layout_marginTop="@dimen/marginHomeSubtitulo"
                      android:layout_height="wrap_content"/>
                  <View
                      android:layout_marginTop="@dimen/marginHomeSubtitulo"
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/colorPrimaryDark"/>
                  <TextView
                      android:text="@string/inicio_frag_tv_que_es_resp"
                      android:layout_width="match_parent"
                      android:textSize="@dimen/subti"
                      android:textColor="@color/colorPrimaryDark"
                      android:layout_marginLeft="@dimen/marginHomeSubtitulo"
                      android:layout_marginRight="@dimen/marginHomeSubtitulo"
                      android:layout_marginTop="@dimen/marginHomeSubtitulo"
                      android:layout_height="wrap_content"/>

              </LinearLayout>

          </androidx.cardview.widget.CardView>
      </LinearLayout>
  </ScrollView>
</FrameLayout>